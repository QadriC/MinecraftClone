{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "MinecraftClone",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/MinecraftClone",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [
        /*{
          "name": "ASAN_OPTIONS",
          "value": "abort_on_error=1:halt_on_error=1"
        }*/
        ],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
        ],
        "preLaunchTask": "CMake: build"
      }
    ]
  }
  